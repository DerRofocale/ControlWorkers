                                         Margin="0 20 20 0" 
                                         PlacementMode="BottomAndAlignRightEdges" 
                                         StaysOpen="False"
                                         Cursor="Hand"
                                         Height="25">
                    <StackPanel
                                HorizontalAlignment="Center">
                        <Button ToolTip="Having Trouble Loggin in?"
                                Margin="0 0 0 0"
                                Content="Help Me"/>
